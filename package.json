{
  "name": "patient-data-collection",
  "version": "1.0.0",
  "description": "Patient survey data collection system for drug development",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup-db": "node setup-database.js",
    "lint": "eslint .",
    "test": "jest",
    "audit": "npm audit --audit-level=moderate"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.40.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  }
}

{
  "scripts": {
    "start": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/?(*.)+(spec|test).[jt]s"],
    "verbose": true,
    "coveragePathIgnorePatterns": ["/node_modules/", "/logs/"]
  }
}